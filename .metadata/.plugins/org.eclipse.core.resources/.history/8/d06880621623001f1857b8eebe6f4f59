	<a href="/users/insert">사용자등록</a>
	<div id="div_list"></div>
	<script id="temp_list" type="x-handlebars-template">
		<table border=1>
		<tr>
			<td>이름</td>
			<td>주소</td>
			<td>번호</td>
		</tr>
		{{#each .}}
			<tr>
				<td>{{uname}}({{uid}})</td>
				<td>{{address1}} {{address2}}</td>
				<td>{{phone}}</td>
			</tr>
		{{/each}}
		</table>
	</script>
</body>

<script>
	getList();
	function getList(){
		$.ajax({
			type:"get",
			url:"/users",
			dataType:"json",
			success:function(data){
				// console.log(data);
				const temp = Handlebars.compile($("#temp_list").html());
				$("#div_list").html(temp(data));
			}
		});
	}
</script>
